<%= form_with(url: login_path, local: true) do |form| %>
<h1>Please Login....</h1>
<div class="field">
    <%= form.label :email, 'Email' %>
    <%= form.text_field :email, autocomplete: 'off' %>
</div>
<div class="field">
    <%= form.label :password, 'Password' %>
    <%= form.text_field :password, autocomplete: 'off' %>
</div>
<%= submit_tag("Login") %>

<% end %>